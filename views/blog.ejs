<!DOCTYPE html>
<html>
<head>
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="../css/style.css">
    
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="container mt-4">
        <div class="card mb-4">
            <div class="card-body ">
                <h1 class="text-center"><%= blog.title %></h1>
                <img src="<%= blog.coverImageURL %>" class="img-fluid mb-3" alt="Cover Image"/>
                <p><%= blog.body %></p>
            </div>
        
        
            <div class="card-body d-flex align-items-center">
                <h5 class="mb-0">Donated By:</h5>
                <img src="<%= blog.createdBy.profileImageURL %>" class="rounded-circle me-3 mr-2" alt="Profile Image" style="width: 20px; height: 20px; object-fit: cover;">
                <h5 class="mb-0"><%= blog.createdBy.fullName %></h5>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <h2>Comments (<%= comments.length %>)</h2>
                <% if (locals.user) { %>
                    <form action="/blog/comment/<%= blog._id %>" method="post">
                        <div class="mb-3">
                            <input type="text" name="content" class="form-control" placeholder="Enter your comment"/>
                        </div>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </form>
                <% } %>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <% comments.forEach(comment => { %>
                    <div class="d-flex align-items-center mb-3">
                        <img src="<%= comment.createdBy.profileImageURL %>" class="rounded-circle me-3" alt="Profile Image" style="width: 50px; height: 50px; object-fit: cover;">
                        <p class="mb-0"><%= comment.content %></p>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
<%- include('./partials/footer.ejs') %>
    <%- include('./partials/script.ejs') %>
</body>
</html>
